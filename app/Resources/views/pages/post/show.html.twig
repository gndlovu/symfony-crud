{% extends 'layout/app.html.twig' %}

{% block content %}

    <div class="card card-cascade narrower">
        <div class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">
            <div>
                <a href="{{ absolute_url('/') }}" class="btn btn-outline-white btn-rounded btn-sm px-2">
                    <i class="fa fa-bars mt-0"></i>
                </a>
            </div>

            <h4 class="white-text mx-3">Post Details</h4>

            <div>
                
            </div>
        </div>

        <div class="card-body p-4">
            <h4 class="card-title">
            {{ post.title }}<a class="btn-floating btn-action ml-auto mr-4 mdb-color lighten-3 float-right" title="Update Post Details" href="{{ absolute_url('/post/update/') }}{{ post.id }}"><i class="fa fa-chevron-right pl-1"></i></a>
            </h4>
            <hr>
            <p class="card-text">{{ post.description }}</p>
        </div>

        <div class="rounded-bottom mdb-color lighten-3 text-center pt-3">
            <ul class="list-unstyled list-inline font-small">
                <li class="list-inline-item pr-2 white-text"><i class="fa fa-clock-o pr-1"></i>{{  ""|date('d/m/Y') }}</li>
                <li class="list-inline-item pr-2"><a class="white-text"><i class="fa fa-comments-o pr-1"></i>0</a></li>
                <li class="list-inline-item pr-2"><a class="white-text"><i class="fa fa-facebook pr-1"></i>0</a></li>
                <li class="list-inline-item"><a class="white-text"><i class="fa fa-twitter pr-1"> </i>0</a></li>
            </ul>
        </div>
    </div>

{% endblock %}